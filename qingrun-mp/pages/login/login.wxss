/* Pages/login/login.wxss */
.login-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.background-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(8rpx);
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.7));
}

.login-content {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 600rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.logo-icon {
  width: 80rpx;
  height: 80rpx;
  color: #11d45f;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  letter-spacing: -1rpx;
}

.subtitle {
  color: #64748b;
  margin-top: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

.login-card {
  padding: 64rpx;
  border-radius: 48rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 20rpx;
  font-weight: bold;
  color: #64748b;
  text-transform: uppercase;
  margin-left: 8rpx;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.icon-wrapper {
  position: absolute;
  left: 32rpx;
  z-index: 2;
}

.login-input {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.6);
  border: 2rpx solid #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 32rpx 32rpx 88rpx;
  font-size: 28rpx;
  color: #1e293b;
  height: 112rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #94a3b8;
}

.links {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.link-primary {
  color: #11d45f;
  font-weight: bold;
}

.link-secondary {
  color: #64748b;
}

.login-btn {
  width: 100% !important;
  background-color: #11d45f;
  color: #ffffff;
  font-weight: bold;
  height: 112rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 32rpx rgba(17, 212, 95, 0.3);
  margin-top: 64rpx;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.divider-wrapper {
  position: relative;
  text-align: center;
  margin: 64rpx 0;
}

.divider {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  border-top: 2rpx solid rgba(148, 163, 184, 0.2);
}

.divider-text {
  position: relative;
  background-color: transparent;
  padding: 0 32rpx;
  font-size: 20rpx;
  color: #94a3b8;
}

.wechat-login-btn {
  width: 100% !important;
  background-color: rgba(255, 255, 255, 0.6);
  border: 2rpx solid #ffffff;
  color: #334155;
  font-weight: bold;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.agreement {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-top: 64rpx;
}

.checkbox-wrapper {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  border: 4rpx solid rgba(17, 212, 95, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-wrapper.active {
  background-color: #11d45f;
}

.agreement-text {
  font-size: 20rpx;
  color: #64748b;
}

.highlight {
  color: #11d45f;
  font-weight: bold;
}

