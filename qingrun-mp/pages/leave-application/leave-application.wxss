/* Pages/leave-application/leave-application.wxss */
.bg-light { background-color: #f6f8f7; }

.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid #f1f5f9;
}

.header-content {
  height: 88rpx;
  padding: 0 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  margin-left: -32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.placeholder-div { width: 48rpx; }

.scroll-content {
  padding: 48rpx;
  padding-bottom: 240rpx;
  box-sizing: border-box;
}

.form-card {
  border-radius: 64rpx;
  padding: 48rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 20rpx;
  font-weight: bold;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
  margin-left: 8rpx;
}

.type-grid {
  display: flex;
  gap: 24rpx;
}

.type-btn {
  flex: 1;
  height: 88rpx;
  background-color: #ffffff;
  border: 2rpx solid #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #64748b;
  transition: all 0.2s;
}

.type-btn.active {
  background-color: #11d45f;
  color: #ffffff;
  border-color: #11d45f;
  box-shadow: 0 16rpx 32rpx rgba(17, 212, 95, 0.3);
}

.time-picker-row {
  display: flex;
  gap: 24rpx;
}

.picker-flex { flex: 1; }
.picker-small { width: 30%; }

.time-box {
  background-color: rgba(255, 255, 255, 0.6);
  border: 2rpx solid #ffffff;
  border-radius: 24rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  gap: 16rpx;
}

.time-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
}

.duration-badge {
  margin-top: 32rpx;
  background-color: rgba(17, 212, 95, 0.05);
  border: 2rpx solid rgba(17, 212, 95, 0.1);
  border-radius: 24rpx;
  height: 88rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.duration-label { font-size: 24rpx; font-weight: bold; color: #11d45f; }
.duration-value { font-size: 36rpx; font-weight: bold; color: #11d45f; }

.reason-textarea {
  width: 100%;
  height: 256rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border: 2rpx solid #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #1e293b;
}

.upload-btn {
  width: 100%;
  height: 128rpx;
  border: 4rpx dashed #cbd5e1;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.3);
  gap: 8rpx;
}

.upload-text {
  font-size: 20rpx;
  font-weight: bold;
  color: #94a3b8;
}

.approver-list {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.approver-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  width: 120rpx;
}

.approver-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  background-color: #f1f5f9;
}

.approver-name { font-size: 20rpx; font-weight: bold; color: #475569; }
.approver-dept { font-size: 18rpx; color: #94a3b8; }

.add-approver {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  width: 120rpx;
}

.add-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
  background-color: rgba(255, 255, 255, 0.3);
}

.add-text { font-size: 20rpx; color: #94a3b8; }

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  padding: 48rpx 96rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f1f5f9;
}

.submit-btn {
  width: 100% !important;
  height: 112rpx;
  background-color: #11d45f;
  color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  box-shadow: 0 16rpx 32rpx rgba(17, 212, 95, 0.3);
  gap: 16rpx;
}

