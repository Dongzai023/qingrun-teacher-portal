/* Pages/home/home.wxss */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 30;
  background-color: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid #f1f5f9;
}

.nav-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.hero-header {
  height: 576rpx;
  position: relative;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(17, 212, 95, 0.05);
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}

.hero-text {
  position: absolute;
  bottom: 128rpx;
  left: 64rpx;
  color: #ffffff;
}

.welcome {
  font-size: 36rpx;
  font-weight: 300;
  opacity: 0.9;
}

.slogan {
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1.2;
  margin-top: 8rpx;
}

.user-card-wrapper {
  margin: -80rpx 48rpx 0;
  position: relative;
  z-index: 10;
}

.user-card {
  padding: 40rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.05);
}

.avatar-wrapper {
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  border: 4rpx solid #ffffff;
}

.rank-tag {
  position: absolute;
  bottom: -16rpx;
  right: -16rpx;
  background: linear-gradient(to right, #fbbf24, #f97316);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 16rpx;
  border-radius: 9999px;
  border: 4rpx solid #ffffff;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
}

.user-dept {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.tags {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.tag.green { background-color: #f0fdf4; color: #15803d; }
.tag.blue { background-color: #eff6ff; color: #1d4ed8; }

.section-title-wrapper {
  margin: 64rpx 48rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e293b;
}

.section-badge {
  font-size: 20rpx;
  font-weight: bold;
  color: #94a3b8;
  background-color: #ffffff;
  padding: 8rpx 24rpx;
  border-radius: 9999px;
}

.checkin-scroller {
  width: 100%;
}

.checkin-list {
  display: flex;
  gap: 32rpx;
  padding: 0 48rpx 32rpx;
}

.checkin-card {
  flex-shrink: 0;
  width: 256rpx;
  height: 320rpx;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.checkin-card.missed { background-color: #ffffff; border: 2rpx solid #fee2e2; }
.checkin-card.active { 
  background: linear-gradient(to bottom right, #11d45f, #0eb350);
  box-shadow: 0 16rpx 32rpx rgba(17, 212, 95, 0.3);
}
.checkin-card.pending { background-color: #ffffff; border: 2rpx solid #f1f5f9; opacity: 0.6; }

.card-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon-wrapper.red { background-color: #fef2f2; color: #ef4444; }
.card-icon-wrapper.white { background-color: rgba(255, 255, 255, 0.2); }
.card-icon-wrapper.grey { background-color: #f8fafc; color: #94a3b8; }

.card-info {
  display: flex;
  flex-direction: column;
}

.time-label { font-size: 24rpx; color: #94a3b8; margin-bottom: 4rpx; }
.time-value { font-size: 36rpx; font-weight: bold; color: #1e293b; }
.time-range { font-size: 20rpx; color: #94a3b8; margin-bottom: 16rpx; }

.time-label.white { color: #dcfce7; }
.time-value.white { color: #ffffff; }
.time-range.white { color: #dcfce7; }

.status-btn {
  width: 100%;
  height: 48rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.status-btn.red { background-color: #ef4444; color: #ffffff; }
.status-btn.white { background-color: #ffffff; color: #11d45f; }
.status-btn.grey { background-color: #f1f5f9; color: #64748b; }

.checkin-main {
  margin: 64rpx 0;
  display: flex;
  flex-direction: column;
  items-center: center;
  align-items: center;
}

.time-display {
  text-align: center;
  margin-bottom: 64rpx;
}

.time-label-small {
  font-size: 20rpx;
  font-weight: bold;
  color: #94a3b8;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

.time-now {
  font-size: 96rpx;
  font-weight: bold;
  color: #1e293b;
  letter-spacing: -4rpx;
}

.time-sec {
  font-size: 48rpx;
  color: #cbd5e1;
  margin-left: 8rpx;
}

.date-badge {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
  padding: 12rpx 32rpx;
  background-color: #ffffff;
  border: 2rpx solid #f1f5f9;
  border-radius: 9999px;
  font-size: 24rpx;
  color: #64748b;
}

.pulse-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #11d45f;
  border-radius: 8rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.5); opacity: 0.5; }
  100% { transform: scale(1); opacity: 1; }
}

.pulse-button-wrapper {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  display: flex;
  items-center: center;
  justify-content: center;
}

.pulse-ring {
  position: absolute;
  inset: 0;
  background-color: rgba(17, 212, 95, 0.2);
  border-radius: 9999px;
}

.animate-ping {
  animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
}

@keyframes ping {
  75%, 100% { transform: scale(1.5); opacity: 0; }
}

.pulse-ring-dash {
  position: absolute;
  inset: 32rpx;
  border: 2rpx dashed rgba(17, 212, 95, 0.3);
  border-radius: 9999px;
}

.animate-rotate {
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.main-button {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  background: linear-gradient(to bottom, #1ce66f, #0eb350);
  border-radius: 9999px;
  z-index: 20;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 40rpx 80rpx -20rpx rgba(17, 212, 95, 0.5);
  border: 12rpx solid rgba(255, 255, 255, 0.4);
}

.btn-icon-wrapper {
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 16rpx;
}

.btn-subtext {
  font-size: 18rpx;
  color: #dcfce7;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-top: 8rpx;
}

.actions-section {
  padding: 0 48rpx 160rpx;
}

.action-card {
  background-color: #ffffff;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(148, 163, 184, 0.1);
  border: 2rpx solid #f1f5f9;
}

.action-icon-bg {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-bg.blue { background-color: #eff6ff; color: #3b82f6; }

.action-content {
  flex: 1;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.action-desc {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

